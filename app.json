  "name": {
    "en": "OpenEPaperLink"
  },
  "settings": [
    {
      "id": "serverAddress",
      "type": "text",
      "label": {
        "en": "Server Address"
      },
      "title": {
        "en": "Server Address"
      },
      "hint": {
        "en": "Enter the server address here"
      },
      "value": "192.168.0.16"
    }
  ],
  "description": {
    "en": "Support for the OpenEPaperLink Gateway "
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Wiggert De haan",
    "email": "wiggert@wiggert.nl"
  },
  "flow": {
    "actions": [
      {
        "title": {
          "en": "Count Days"
        },
        "hint": {
          "en": "Counts days, starting with the value below. If the count value gets higher than the threshold, the number is displayed in red, otherwise it's black"
        },
        "args": [
          {
            "type": "device",
            "name": "Id",
            "placeholder": {
              "en": "Select the e-tag"
            }
          },
          {
            "type": "number",
            "name": "Counter",
            "placeholder": {
              "en": "Number of days"
            },
            "min": 1,
            "max": 1000,
            "step": 1
          },
          {
            "type": "number",
            "name": "Threshold",
            "placeholder": {
              "en": "Threshold to show the number in red"
            },
            "min": 1,
            "max": 999,
            "step": 1
          }
        ],
        "id": "show-count-days"
      },
      {
        "title": {
          "en": "Count Hours"
        },
        "hint": {
          "en": "Counts hours, starting with the value below. If the count value gets higher than the threshold, the number is displayed in red, otherwise it's black"
        },
        "args": [
          {
            "type": "device",
            "name": "Id",
            "placeholder": {
              "en": "Select the e-tag"
            }
          },
          {
            "type": "number",
            "name": "Counter",
            "placeholder": {
              "en": "Number of hours"
            },
            "min": 1,
            "max": 240,
            "step": 1
          },
          {
            "type": "number",
            "name": "Threshold",
            "placeholder": {
              "en": "Threshold to show the number in red"
            },
            "min": 1,
            "max": 240,
            "step": 1
          }
        ],
        "id": "show-count-hours"
      },
      {
        "title": {
          "en": "Show Current Date"
        },
        "hint": {
          "en": "Shows the current date on your e-tag"
        },
        "args": [
          {
            "type": "device",
            "name": "Id",
            "placeholder": {
              "en": "Select the e-tag"
            }
          }
        ],
        "id": "show-current-date"
      },
      {
        "title": {
          "en": "Show Current Weather"
        },
        "hint": {
          "en": "Show the current weather in a certain place"
        },
        "args": [
          {
            "type": "device",
            "name": "Id",
            "placeholder": {
              "en": "0000000000000000"
            }
          },
          {
            "type": "text",
            "name": "Location",
            "placeholder": {
              "en": "Show the current weather in this city"
            }
          },
          {
            "type": "dropdown",
            "name": "Units",
            "placeholder": {
              "en": "Metric / Imperial"
            },
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "Celcius / Beaufort / millimeters"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "Fahrenheit / mph / millimeters"
                }
              }
            ]
          }
        ],
        "id": "show-current-weather"
      },
      {
        "title": {
          "en": "WriteMessage"
        },
        "hint": {
          "en": "With this Flow Card you can write a simple message to a EPaper Device"
        },
        "args": [
          {
            "type": "device",
            "name": "Id",
            "placeholder": {
              "en": "0000000000000000"
            }
          },
          {
            "type": "text",
            "name": "Message",
            "placeholder": {
              "en": "Hello World"
            }
          }
        ],
        "id": "writemessage"
      }
    ]
  },
